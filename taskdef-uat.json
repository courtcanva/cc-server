{
    "family": "CCS-F-UAT-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "essential": true,
            "image": "grafana/fluent-bit-plugin-loki:main",
            "name": "log_router",
            "firelensConfiguration": {
                "type": "fluentbit",
                "options": {
                    "enable-ecs-log-metadata": "true"
                }
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "firelens-container-uat",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-create-group": "true",
                    "awslogs-stream-prefix": "firelens"
                }
            },
            "memoryReservation": 50
        },
        {
            "name": "CCS-F-UAT-container",
            "image": "{{image}}",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environmentFiles": [
                {
                    "value": "arn:aws:s3:::cc-environment-variables/ccs/ccsuat.env",
                    "type": "s3"
                }
            ],
            "essential": true
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1vCPU",
    "memory": "2GB",
    "executionRoleArn": "arn:aws:iam::245866473499:role/myEcsTaskExecutionRole"
}
