{
    "family": "CCS-F-PROD-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "CCS-F-PROD-container",
            "image": "{{image}}",
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
        "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-create-group": "true",
                    "awslogs-group": "awslogs-cc-server-prod",
                    "awslogs-region": "ap-southeast-2",
                    "awslogs-stream-prefix": "awslogs-courtcanva"
                }
            },
            "environmentFiles": [
                {
                    "value": "arn:aws:s3:::cc-server-environment-variables/ccs/ccsprod.env",
                    "type": "s3"
                }
            ],
            "essential": true
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1vCPU",
    "memory": "2GB",
    "executionRoleArn": "arn:aws:iam::497551902879:role/ecsTaskExecutionRole"
}
